          </div>
          <div class="col-sm-6">
            <div class="p-5">
              <h3 class="mt-3 mb-5 text-center">
                Login here
              </h3>
              <form method="post" action="/login">
                <div class="form-group mt-3">
                  <div class="chat-input">
                    <input
                      type="text"
                      placeholder="email"
                      id="txtemail"
                      class="chat-input-field form-control-sm"
                      name="Email"
                    />
                    <span class="material-icons">
                      mail
                    </span>
                  </div>
                </div>

                <div class="form-group mt-3">
                  <div class="chat-input">
                    <input
                      type="text"
                      placeholder="password"
                      id="txtPassword"
                      class="chat-input-field form-control-sm"
                      name="Password"
                    />
                    <span class="material-icons">
                      lock
                    </span>
                  </div>
                </div>
                <input
                  type="submit"
                  class="btn btn-block btn-primary mt-3 btn-big"
                  name="submit"
                  id="login"
                  placeholder="Login"
                />
              </form>
              <div class="row mt-4">
                <div class="col-sm-12 text-center">
                  <small>
                    Forgot Username / Password?
                    <br />
                    <a href="#">Click Here</a>
                  </small>
                </div>
              </div>
              <div class="row my-4">
                <div class="col-sm-12 text-center">
                  Don't have an Account
                  <a href="/register">
                    <span>
                      Register Here
                    </span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
